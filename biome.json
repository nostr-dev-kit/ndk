{
  "$schema": "https://biomejs.dev/schemas/2.0.0-beta.1/schema.json",
  "formatter": {
    "enabled": false,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 4,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "javascript": {
     "formatter": {
        "quoteStyle": "double",
        "trailingCommas": "all"
     }
  }
}