{
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "module": "esnext",
        "target": "esnext",
        "strict": true,
        "outDir": "dist",
        "strictNullChecks": true,
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "node"
    },
}