{
    "compilerOptions": {
        "types": ["node", "react-native"],
        "target": "esnext",
        "skipLibCheck": true,
        "module": "nodenext",
        "strict": false,
        "jsx": "react",
        "declaration": true,
        "esModuleInterop": true,
        "rootDir": "src",
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules"]
}
