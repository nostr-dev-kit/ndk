{
    "name": "@nostr-dev-kit/ndk-mobile",
    "version": "0.6.19",
    "description": "NDK Mobile",
    "private": false,
    "license": "MIT",
    "expo": {
        "plugins": ["./sig-check-module/expo-plugin.js"]
    },
    "dependencies": {
        "@bacons/text-decoder": "^0.0.0",
        "@noble/hashes": "^1.3.3",
        "@nostr-dev-kit/ndk": "2.14.2",
        "@nostr-dev-kit/ndk-hooks": "1.1.17",
        "@nostr-dev-kit/ndk-wallet": "0.5.6",
        "expo-image": "~2.0.7",
        "expo-nip55": "*",
        "expo-secure-store": "~14.0.1",
        "react-native-get-random-values": "~1.11.0",
        "react-native-reanimated": "^3.17.5",
        "typescript-lru-cache": "^2.0.0",
        "zustand": "^5.0.2"
    },
    "peerDependencies": {
        "expo": "^52",
        "expo-sqlite": "^15",
        "react-native": ">=0.71.0"
    },
    "devDependencies": {
        "@types/react-native": "^0.73.0",
        "babel-preset-expo": "^12.0.9",
        "expo-sqlite": "^15.1.4",
        "react-native-builder-bob": "^0.40.6",
        "typescript": "^5.8.3"
    },
    "keywords": [
        "ndk",
        "nostr",
        "react-native",
        "expo"
    ],
    "source": "./src/index.ts",
    "type": "module",
    "main": "dist/module/index.js",
    "react-native": "dist/module/index.js",
    "types": "./dist/typescript/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/typescript/index.d.ts",
                "default": "./dist/module/index.js"
            },
            "require": {
                "types": "./dist/typescript/index.d.ts",
                "default": "./dist/module/index.js"
            }
        },
        "./components": {
            "import": {
                "types": "./dist/typescript/components/index.d.ts",
                "default": "./dist/module/components/index.js"
            },
            "require": {
                "types": "./dist/typescript/components/index.d.ts",
                "default": "./dist/module/components/index.js"
            }
        },
        "./components/relays": {
            "import": {
                "types": "./dist/typescript/components/relays/index.d.ts",
                "default": "./dist/module/components/relays/index.js"
            },
            "require": {
                "types": "./dist/typescript/components/relays/index.d.ts",
                "default": "./dist/module/components/relays/index.js"
            }
        },
        "./sig-check-module": {
            "import": {
                "types": "./sig-check-module/src/index.d.ts",
                "default": "./sig-check-module/src/index.ts"
            },
            "require": {
                "types": "./sig-check-module/src/index.d.ts",
                "default": "./sig-check-module/src/index.ts"
            }
        }
    },
    "scripts": {
        "build": "bob build",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage"
    },
    "files": [
        "src",
        "dist",
        "sig-check-module",
        "!src/workers/example.tsx",
        "!dist/**/example.*",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__"
    ],
    "react-native-builder-bob": {
        "source": "src",
        "output": "dist",
        "targets": [
            [
                "module",
                {
                    "esm": true
                }
            ],
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    },
    "eslintIgnore": [
        "node_modules/",
        "dist/"
    ]
}
