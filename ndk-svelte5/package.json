{
  "name": "@nostr-dev-kit/ndk-svelte5",
  "version": "0.1.0",
  "description": "Modern, performant, and beautiful Svelte 5 integration for NDK",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./stores": {
      "types": "./dist/stores.d.ts",
      "svelte": "./dist/stores.js",
      "default": "./dist/stores.js"
    },
    "./components/*": {
      "svelte": "./src/lib/components/*"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "check": "tsc --noEmit",
    "lint": "prettier --check .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "nostr",
    "ndk",
    "svelte",
    "svelte5",
    "runes",
    "reactive",
    "decentralized",
    "social"
  ],
  "author": "pablof7z",
  "license": "MIT",
  "peerDependencies": {
    "@nostr-dev-kit/ndk": "^2.14.0",
    "svelte": "^5.0.0"
  },
  "dependencies": {
    "@nostr-dev-kit/ndk": "^2.14.0"
  },
  "devDependencies": {
    "@nostr-dev-kit/ndk-wallet": "^0.6.0",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/node": "^22.0.0",
    "@vitest/browser": "^3.2.4",
    "playwright": "^1.55.1",
    "prettier": "^3.0.0",
    "prettier-plugin-svelte": "^3.0.0",
    "svelte": "^5.23.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.6.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vitest": "^2.0.0",
    "vitest-browser-svelte": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nostr-dev-kit/ndk.git",
    "directory": "ndk-svelte5"
  },
  "bugs": {
    "url": "https://github.com/nostr-dev-kit/ndk/issues"
  },
  "homepage": "https://github.com/nostr-dev-kit/ndk/tree/master/ndk-svelte5#readme"
}
