{
    "name": "@nostr-dev-kit/monorepo",
    "private": true,
    "scripts": {
        "build": "turbo build",
        "build:libs": "turbo build --filter='./ndk-core' --filter='./ndk-wallet' --filter='./ndk-hooks' --filter='./ndk-mobile' --filter='./blossom' --filter='./ndk-cache-*' --filter='./cache-memory' --filter='./ndk-svelte' --filter='./ndk-svelte-components' --filter='./sessions' --filter='./sync' --filter='./wot' --filter='./svelte'",
        "build:core": "cd ndk-core && bun run build",
        "build:wallet": "cd ndk-wallet && bun run build",
        "build:hooks": "cd ndk-hooks && bun run build",
        "build:mobile": "cd ndk-mobile && bun run build",
        "build:blossom": "cd blossom && bun run build",
        "build:cache-sqlite": "cd ndk-cache-sqlite && bun run build",
        "dev": "turbo dev --no-cache --continue",
        "lint": "biome check .",
        "clean": "turbo clean && rm -rf node_modules",
        "format": "biome format --write .",
        "docs:dev": "bash ./prepare-docs.sh && npx vitepress dev docs",
        "docs:build": "bash ./prepare-docs.sh && vitepress build docs",
        "changeset": "changeset",
        "cs": "changeset",
        "cs:ver": "changeset version",
        "test": "bun vitest",
        "cs:pub": "changeset publish",
        "version-packages": "changeset version",
        "release": "turbo build --filter=docs^... && changeset publish",
        "docs:preview": "vitepress preview"
    },
    "type": "module",
    "workspaces": [
        "ndk-core",
        "ndk-cache-dexie",
        "cache-memory",
        "ndk-cache-redis",
        "ndk-cache-nostr",
        "ndk-cache-sqlite",
        "ndk-svelte",
        "ndk-hooks",
        "ndk-mobile",
        "sessions",
        "sync",
        "svelte",
        "svelte/examples/basic-feed",
        "svelte/examples/constellation",
        "svelte/examples/event-graph",
        "svelte/examples/nip61-viewer",
        "svelte/examples/nutsack",
        "svelte/examples/sig-verify-demo",
        "svelte/examples/test-app",
        "svelte/examples/sessions-demo",
        "svelte/examples/wot-demo",
        "ndk-svelte-components",
        "ndk-wallet",
        "wot",
        "blossom",
        "ndk-cache-sqlite-wasm"
    ],
    "engines": {
        "node": ">=16.0"
    },
    "packageManager": "bun@1.0.0",
    "devDependencies": {
        "turbo": "^2.5.3"
    },
    "dependencies": {
        "@biomejs/biome": "^2.0.0-beta.1",
        "mermaid": "^11.6.0",
        "vitepress": "^1.6.3",
        "vitepress-plugin-mermaid": "^2.0.17"
    }
}
