{
  "name": "@nostr-dev-kit/react",
  "version": "1.3.13-beta.51",
  "description": "React hooks for the Nostr Development Kit (NDK)",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "bun run build --watch",
    "lint": "biome check .",
    "format": "biome format . --write",
    "test": "vitest",
    "test:watch": "vitest --watch"
  },
  "dependencies": {
    "@nostr-dev-kit/ndk": "3.0.0-beta.51",
    "@nostr-dev-kit/wallet": "0.8.11-beta.51",
    "@testing-library/react": "^14.1.2",
    "zustand": "^5.0.3"
  },
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "jsdom": "^27.0.1",
    "tsup": "^8.4.0",
    "react": "*",
    "react-dom": "^18.3.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.7",
    "vite": "^7.1.11",
    "esbuild": "^0.25.12",
    "zustand": "^5.0.3"
  },
  "keywords": [
    "nostr",
    "ndk",
    "react",
    "hooks"
  ],
  "author": "_@f7z.io",
  "license": "MIT"
}
