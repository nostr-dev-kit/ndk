{
    "compilerOptions": {
      "baseUrl": ".",
        "target": "ES2020",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "strict": true,
        "declaration": true,
        "declarationDir": "./dist/types",
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
      "types": [
        "vitest"
      ],
      "paths": {
        "@nostr-dev-kit/sessions": [
          "src/index.ts"
        ]
      }
    },
    "include": ["src/**/*", "__tests__/**/*"],
    "exclude": ["node_modules", "dist"]
}
