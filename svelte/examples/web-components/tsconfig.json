{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true,
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "types": ["svelte"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
