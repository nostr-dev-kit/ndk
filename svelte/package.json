{
  "name": "@nostr-dev-kit/svelte",
  "version": "4.0.0-beta.17",
  "description": "Modern, performant, and beautiful Svelte 5 integration for NDK",
  "type": "module",
  "svelte": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js"
    },
    "./stores": {
      "types": "./dist/stores/index.d.ts",
      "svelte": "./dist/stores/index.js",
      "import": "./dist/stores/index.js"
    },
    "./components/*": {
      "svelte": "./dist/components/*",
      "import": "./dist/components/*"
    },
    "./builders/*": {
      "types": "./src/lib/builders/*/index.d.ts",
      "import": "./src/lib/builders/*/index.ts",
      "default": "./src/lib/builders/*/index.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite dev",
    "dev:package": "svelte-package -w",
    "build": "svelte-package",
    "build:package": "svelte-package",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --fix . && prettier --write .",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "registry:build": "shadcn-svelte registry build --output static/r",
    "registry:serve": "bunx --bun serve@latest static -p 5173",
    "registry:dev": "bun run registry:build && bun run registry:serve"
  },
  "keywords": [
    "nostr",
    "ndk",
    "svelte",
    "svelte5",
    "runes",
    "reactive",
    "decentralized",
    "social"
  ],
  "author": "pablof7z",
  "license": "MIT",
  "peerDependencies": {
    "@nostr-dev-kit/blossom": "8.0.0-beta.17",
    "@nostr-dev-kit/ndk": "3.0.0-beta.17",
    "@nostr-dev-kit/sessions": "0.6.4-beta.17",
    "@nostr-dev-kit/sync": "0.4.0-beta.17",
    "@nostr-dev-kit/wallet": "0.8.11-beta.17",
    "@nostr-dev-kit/wot": "0.3.7-beta.17",
    "svelte": "^5.42.3"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/adapter-vercel": "^6.0.0",
    "@sveltejs/kit": "^2.47.2",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.4",
    "@types/node": "^24.9.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.38.0",
    "eslint-plugin-svelte": "^3.12.5",
    "globals": "^16.4.0",
    "playwright": "^1.56.1",
    "prettier": "^3.3.3",
    "prettier-plugin-svelte": "^3.0.0",
    "shadcn-svelte": "^1.0.10",
    "svelte": "^5.42.3",
    "svelte-check": "^4.0.0",
    "svelte-eslint-parser": "^1.4.0",
    "tslib": "^2.6.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.11",
    "vitest": "^3.2.4",
    "vitest-browser-svelte": "^1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nostr-dev-kit/ndk.git",
    "directory": "svelte"
  },
  "bugs": {
    "url": "https://github.com/nostr-dev-kit/ndk/issues"
  },
  "homepage": "https://github.com/nostr-dev-kit/ndk/tree/master/svelte#readme"
}
