{
    "name": "@nostr-dev-kit/svelte",
    "version": "3.0.0",
    "description": "Modern, performant, and beautiful Svelte 5 integration for NDK",
    "type": "module",
    "svelte": "./dist/index.js",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js",
            "import": "./dist/index.js"
        },
        "./stores": {
            "types": "./dist/stores/index.d.ts",
            "svelte": "./dist/stores/index.js",
            "import": "./dist/stores/index.js"
        },
        "./components/*": {
            "svelte": "./dist/components/*",
            "import": "./dist/components/*"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "dev": "svelte-package -w",
        "build": "svelte-package",
        "prepare": "svelte-package",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "lint": "eslint . && prettier --check .",
        "lint:fix": "eslint --fix . && prettier --write .",
        "format": "prettier --write .",
        "test": "vitest run",
        "test:watch": "vitest"
    },
    "keywords": [
        "nostr",
        "ndk",
        "svelte",
        "svelte5",
        "runes",
        "reactive",
        "decentralized",
        "social"
    ],
    "author": "pablof7z",
    "license": "MIT",
    "peerDependencies": {
        "@nostr-dev-kit/ndk": "^2.18.0",
        "svelte": "^5.41.1"
    },
    "dependencies": {
        "@nostr-dev-kit/cache-sqlite-wasm": "^0.8.2",
        "@nostr-dev-kit/ndk": "^2.18.0",
        "@nostr-dev-kit/sessions": "^0.6.3",
        "@nostr-dev-kit/sync": "^0.3.6",
        "@nostr-dev-kit/wallet": "^0.8.10",
        "@nostr-dev-kit/wot": "^0.3.6",
        "@tiptap/core": "^2.6.6",
        "@tiptap/extension-image": "^2.6.6",
        "@tiptap/extension-link": "^2.6.6",
        "@tiptap/pm": "^2.6.6",
        "@tiptap/starter-kit": "^2.6.6",
        "linkifyjs": "^4.1.3",
        "nostr-editor": "^1.0.1",
        "prosemirror-markdown": "^1.13.0",
        "prosemirror-model": "^1.22.3",
        "prosemirror-state": "^1.4.3",
        "prosemirror-view": "^1.39.3",
        "tiptap-markdown": "^0.8.10"
    },
    "devDependencies": {
        "@sveltejs/adapter-auto": "^3.0.0",
        "@sveltejs/kit": "^2.47.2",
        "@sveltejs/package": "^2.0.0",
        "@sveltejs/vite-plugin-svelte": "^6.2.1",
        "@types/node": "^24.9.0",
        "@vitest/browser": "^3.2.4",
        "eslint": "^9.38.0",
        "eslint-plugin-svelte": "^3.12.5",
        "globals": "^16.4.0",
        "playwright": "^1.56.1",
        "prettier": "^3.3.3",
        "prettier-plugin-svelte": "^3.0.0",
        "svelte": "^5.41.1",
        "svelte-check": "^4.0.0",
        "svelte-eslint-parser": "^1.4.0",
        "tslib": "^2.6.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.2",
        "vite": "^7.1.11",
        "vitest": "^3.2.4",
        "vitest-browser-svelte": "^1.1.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/nostr-dev-kit/ndk.git",
        "directory": "svelte"
    },
    "bugs": {
        "url": "https://github.com/nostr-dev-kit/ndk/issues"
    },
    "homepage": "https://github.com/nostr-dev-kit/ndk/tree/master/svelte#readme"
}
