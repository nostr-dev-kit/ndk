{
  "name": "showcase",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json 2>&1 | grep -E -v '(/examples/|[.]example[.]svelte)' || true",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "check:all": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "ndk:check": "bun run scripts/scan-and-upgrade.ts",
    "ndk:upgrade": "bun run scripts/scan-and-upgrade.ts --yes",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@internationalized/date": "^3.8.1",
    "@lucide/svelte": "^0.553.0",
    "@sveltejs/adapter-auto": "^6.1.0",
    "@sveltejs/adapter-vercel": "^6.0.0",
    "@sveltejs/kit": "^2.48.4",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/postcss": "4.1.17",
    "@tailwindcss/typography": "^0.5.19",
    "@testing-library/svelte": "^5.2.8",
    "@testing-library/user-event": "^14.6.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/browser-playwright": "^4.0.8",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "package-manager-detector": "^1.3.0",
    "playwright": "^1.49.0",
    "postcss": "^8.5.6",
    "svelte": "^5.43.5",
    "svelte-check": "^4.3.2",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "4.1.17",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "vaul-svelte": "^1.0.0-next.7",
    "vite": "^7.2.1",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^4.0.7",
    "vitest-browser-svelte": "^2.0.1"
  },
  "dependencies": {
    "@hugeicons/core-free-icons": "^1.2.1",
    "@hugeicons/svelte": "^1.0.2",
    "@nostr-dev-kit/blossom": "8.0.0-beta.44",
    "@nostr-dev-kit/cache-sqlite-wasm": "1.0.0-beta.44",
    "@nostr-dev-kit/ndk": "3.0.0-beta.44",
    "@nostr-dev-kit/sessions": "0.6.4-beta.44",
    "@nostr-dev-kit/svelte": "4.0.0-beta.44",
    "@nostr-dev-kit/sync": "0.4.0-beta.44",
    "@nostr-dev-kit/wallet": "0.8.11-beta.44",
    "@nostr-dev-kit/wot": "0.3.7-beta.44",
    "bits-ui": "^2.14.2",
    "marked": "^16.4.1",
    "shiki": "^3.15.0",
    "svelte-motion": "^0.12.2"
  }
}
