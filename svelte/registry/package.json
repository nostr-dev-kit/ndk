{
  "name": "showcase",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "packageManager": "bun@1.1.38",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && bun run scripts/run-svelte-check.ts",
    "check:watch": "svelte-kit sync && bun run scripts/run-svelte-check.ts --watch",
    "check:all": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "publish": "bun run scripts/publish.ts patch",
    "publish:patch": "bun run scripts/publish.ts patch",
    "publish:minor": "bun run scripts/publish.ts minor",
    "publish:major": "bun run scripts/publish.ts major"
  },
  "devDependencies": {
    "@internationalized/date": "^3.8.1",
    "@sveltejs/adapter-vercel": "^6.0.0",
    "@sveltejs/kit": "^2.48.5",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/postcss": "4.1.17",
    "@testing-library/svelte": "^5.2.9",
    "@testing-library/user-event": "^14.6.1",
    "@types/qrcode": "^1.5.6",
    "@vitest/browser": "^4.0.9",
    "@vitest/browser-playwright": "^4.0.9",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "autoprefixer": "^10.4.22",
    "clsx": "^2.1.1",
    "package-manager-detector": "^1.3.0",
    "playwright": "^1.49.0",
    "postcss": "^8.5.6",
    "svelte": "^5.43.6",
    "svelte-check": "^4.3.4",
    "tailwind-merge": "^3.4.0",
    "tailwind-variants": "^3.1.1",
    "tailwindcss": "4.1.17",
    "typescript": "^5.9.2",
    "vite": "^7.2.1",
    "vite-plugin-devtools-json": "^1.0.0",
    "vitest": "^4.0.9"
  },
  "dependencies": {
    "@hugeicons/core-free-icons": "^1.2.1",
    "@hugeicons/svelte": "^1.0.2",
    "@nostr-dev-kit/blossom": "8.0.0-beta.70",
    "@nostr-dev-kit/cache-sqlite-wasm": "1.0.0-beta.70",
    "@nostr-dev-kit/ndk": "3.0.0-beta.70",
    "@nostr-dev-kit/sessions": "1.0.0-beta.70",
    "@nostr-dev-kit/svelte": "4.0.0-beta.70",
    "@nostr-dev-kit/sync": "1.0.0-beta.70",
    "@nostr-dev-kit/wallet": "1.0.0-beta.70",
    "@nostr-dev-kit/wot": "1.0.0-beta.70",
    "bits-ui": "^2.14.3",
    "html5-qrcode": "^2.3.8",
    "marked": "^17.0.0",
    "qrcode": "^1.5.4",
    "shiki": "^3.15.0",
    "svelte-sonner": "^1.0.6"
  }
}
