{
  "name": "showcase",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "registry:generate": "bun run scripts/generate-registry-from-blocks.ts",
    "registry:validate": "bun run scripts/validate-registry.ts",
    "registry:versions": "bun run scripts/add-component-versions.ts",
    "registry:manifest": "bun run scripts/generate-version-manifest.ts",
    "registry:headers": "bun run scripts/add-version-headers.ts",
    "registry:update": "bun run registry:generate && bun run registry:versions && bun run registry:manifest && bun run registry:headers",
    "ndk:check": "bun run scripts/scan-and-upgrade.ts",
    "ndk:upgrade": "bun run scripts/scan-and-upgrade.ts --yes"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.1.0",
    "@sveltejs/adapter-vercel": "^6.0.0",
    "@sveltejs/kit": "^2.48.3",
    "@sveltejs/vite-plugin-svelte": "^6.2.0",
    "@tailwindcss/postcss": "4.1.16",
    "autoprefixer": "^10.4.21",
    "postcss": "^8.5.6",
    "svelte": "^5.43.0",
    "svelte-check": "^4.3.2",
    "tailwindcss": "4.1.16",
    "typescript": "^5.9.2",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "@hugeicons/core-free-icons": "^1.2.1",
    "@hugeicons/svelte": "^1.0.2",
    "@nostr-dev-kit/blossom": "8.0.0-beta.26",
    "@nostr-dev-kit/cache-sqlite-wasm": "1.0.0-beta.26",
    "@nostr-dev-kit/ndk": "3.0.0-beta.26",
    "@nostr-dev-kit/sessions": "0.6.4-beta.26",
    "@nostr-dev-kit/svelte": "4.0.0-beta.26",
    "@nostr-dev-kit/sync": "0.4.0-beta.26",
    "@nostr-dev-kit/wallet": "0.8.11-beta.26",
    "@nostr-dev-kit/wot": "0.3.7-beta.26",
    "bits-ui": "^2.8.3",
    "marked": "^16.4.1",
    "shiki": "^3.14.0"
  }
}
