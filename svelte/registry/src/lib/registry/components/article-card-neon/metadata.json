{
  "name": "article-card-neon",
  "title": "Article Card Neon",
  "category": "article",
  "subcategory": "cards",
  "variant": "neon",
  "oneLiner": "A futuristic neon-styled article card",
  "command": "npx jsrepo add article-card-neon",
  "dependencies": [
    "@nostr-dev-kit/svelte",
    "@nostr-dev-kit/ndk"
  ],
  "useCases": [
    "modern-designs",
    "gaming-sites",
    "tech-blogs"
  ],
  "registration": {
    "autoRegister": true,
    "priority": 8,
    "wrapper": "NDKArticle"
  },
  "apiDoc": {
    "name": "ArticleCardNeon",
    "description": "A futuristic neon-styled article card with full background image, glossy neon border effect, and gradient overlays. Features article title, summary, author name, and reading time with modern dark aesthetics. Perfect for gaming sites and tech blogs.",
    "importPath": "import { ArticleCardNeon } from '$lib/registry/components/article/cards/neon'",
    "props": [
      {
        "name": "ndk",
        "type": "NDKSvelte",
        "required": true,
        "description": "NDK instance for Nostr operations"
      },
      {
        "name": "article",
        "type": "NDKArticle",
        "required": true,
        "description": "Article to display"
      },
      {
        "name": "width",
        "type": "string",
        "default": "'w-[320px]'",
        "description": "Tailwind CSS width class for the card"
      },
      {
        "name": "height",
        "type": "string",
        "default": "'h-[480px]'",
        "description": "Tailwind CSS height class for the card"
      },
      {
        "name": "onclick",
        "type": "(e: MouseEvent) => void",
        "description": "Click handler - renders as button when provided"
      },
      {
        "name": "class",
        "type": "string",
        "description": "Additional CSS classes"
      }
    ]
  }
}
