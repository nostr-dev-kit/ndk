{
  "name": "article-card-basic",
  "title": "Article Card",
  "category": "article",
  "subcategory": "cards",
  "variant": "basic",
  "description": "A medium-sized article card with image, title, summary and metadata",
  "command": "npx jsrepo add article/cards/basic",
  "dependencies": [
    "@nostr-dev-kit/svelte",
    "@nostr-dev-kit/ndk"
  ],
  "useCases": [
    "article-lists",
    "content-feeds",
    "blog-layouts",
    "news-sites"
  ],
  "apiDoc": {
    "name": "ArticleCard",
    "description": "Article card component",
    "importPath": "import { ArticleCard } from '$lib/registry/components/article/cards/basic'",
    "props": [
      {
        "name": "ndk",
        "type": "NDKSvelte",
        "description": "NDK instance"
      },
      {
        "name": "article",
        "type": "NDKArticle",
        "description": "Article to display"
      },
      {
        "name": "showImage",
        "type": "boolean",
        "default": "true",
        "description": "Show article image"
      },
      {
        "name": "showExcerpt",
        "type": "boolean",
        "default": "true",
        "description": "Show article excerpt"
      },
      {
        "name": "class",
        "type": "string",
        "description": "Additional CSS classes"
      }
    ]
  }
}
