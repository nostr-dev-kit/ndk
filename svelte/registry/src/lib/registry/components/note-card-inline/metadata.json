{
  "name": "note-card-inline",
  "title": "Note Card Inline",
  "category": "note",
  "subcategory": "cards",
  "variant": "inline",
  "oneLiner": "An inline note reference",
  "command": "npx jsrepo add note/cards/inline",
  "dependencies": [
    "@nostr-dev-kit/svelte",
    "@nostr-dev-kit/ndk"
  ],
  "useCases": [
    "quotes",
    "references",
    "embedded-notes"
  ],
  "apiDoc": {
    "name": "NoteCardInline",
    "description": "An inline note reference card for embedding quoted or referenced notes within content. Features max-width constraint, full header with medium avatar, and truncated content. Perfect for quote posts, note references, or embedded reply previews.",
    "importPath": "import { NoteCardInline } from '$lib/registry/components/note/cards/inline'",
    "props": [
      {
        "name": "ndk",
        "type": "NDKSvelte",
        "required": true,
        "description": "NDK instance for Nostr operations"
      },
      {
        "name": "event",
        "type": "NDKEvent",
        "required": true,
        "description": "Note event to display"
      }
    ]
  }
}
