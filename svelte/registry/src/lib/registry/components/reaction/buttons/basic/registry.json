{
  "name": "reaction",
  "title": "Reaction Button",
  "category": "reaction",
  "subcategory": "buttons",
  "variant": "basic",
  "description": "A simple reaction button with variants",
  "command": "npx jsrepo add reaction/buttons/basic",
  "dependencies": [
    "@nostr-dev-kit/svelte",
    "@nostr-dev-kit/ndk"
  ],
  "useCases": [
    "social-interactions",
    "engagement",
    "feedback"
  ],
  "showcaseTitle": "Reaction Button",
  "showcaseDescription": "Simple reaction button with multiple style variants. Perfect for any social interface.",
  "apiDocs": [
    {
      "name": "ReactionButton",
      "description": "Simple reaction button with variants",
      "importPath": "import { ReactionButton } from '$lib/registry/components/reaction/buttons/basic'",
      "props": [
        {
          "name": "ndk",
          "type": "NDKSvelte",
          "description": "NDK instance (optional if available in context)"
        },
        {
          "name": "event",
          "type": "NDKEvent",
          "required": true,
          "description": "Event to react to"
        },
        {
          "name": "variant",
          "type": "'ghost' | 'outline' | 'pill' | 'solid'",
          "default": "'ghost'",
          "description": "Visual variant of the button"
        },
        {
          "name": "emoji",
          "type": "string",
          "default": "'❤️'",
          "description": "Emoji to use for reaction"
        },
        {
          "name": "showCount",
          "type": "boolean",
          "default": "true",
          "description": "Whether to show reaction count"
        },
        {
          "name": "onclick",
          "type": "() => void",
          "description": "Optional click handler"
        },
        {
          "name": "class",
          "type": "string",
          "description": "Additional CSS classes"
        }
      ]
    }
  ]
}
