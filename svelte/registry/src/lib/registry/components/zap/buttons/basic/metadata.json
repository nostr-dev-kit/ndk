{
  "name": "zap-button",
  "title": "Zap Button",
  "category": "zap",
  "subcategory": "buttons",
  "variant": "basic",
  "description": "Lightning payment button for zapping content",
  "command": "npx jsrepo add zap/buttons/basic",
  "dependencies": [
    "@nostr-dev-kit/svelte",
    "@nostr-dev-kit/ndk"
  ],
  "useCases": [
    "monetization",
    "tips",
    "lightning-payments"
  ],
  "apiDocs": [
    {
      "name": "ZapButton",
      "description": "Zap button component",
      "importPath": "import { ZapButton } from '$lib/registry/components/zap/buttons/basic'",
      "props": [
        {
          "name": "ndk",
          "type": "NDKSvelte",
          "description": "NDK instance"
        },
        {
          "name": "event",
          "type": "NDKEvent",
          "description": "Event to zap"
        },
        {
          "name": "defaultAmount",
          "type": "number",
          "default": "21",
          "description": "Default zap amount in sats"
        },
        {
          "name": "class",
          "type": "string",
          "description": "Additional CSS classes"
        }
      ]
    }
  ]
}
