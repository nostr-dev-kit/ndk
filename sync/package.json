{
    "name": "@nostr-dev-kit/sync",
    "version": "0.2.0",
    "description": "NIP-77 Negentropy sync protocol implementation for NDK",
    "type": "module",
    "main": "dist/index.cjs",
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.js"
            },
            "require": {
                "types": "./dist/index.d.ts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts --clean",
        "dev": "bun run build --watch",
        "lint": "biome check .",
        "format": "biome format . --write",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:coverage": "vitest run --coverage",
        "e2e": "bun run e2e-test.ts",
        "e2e:sync-subscribe": "bun run e2e-sync-subscribe.ts",
        "example:relay-check": "bun run examples/check-relay-support.ts"
    },
    "dependencies": {
        "@nostr-dev-kit/ndk": "workspace:^",
        "nostr-tools": "^2.10.2",
        "tseep": "^1.3.1"
    },
    "devDependencies": {
        "@nostr-dev-kit/cache-memory": "workspace:^",
        "@nostr-dev-kit/cache-dexie": "workspace:^",
        "@nostr-dev-kit/cache-nostr": "workspace:^",
        "tsup": "^8",
        "typescript": "^5.8.2",
        "vitest": "^1.6.1",
        "vite": "^4.4.9"
    },
    "keywords": [
        "nostr",
        "ndk",
        "sync",
        "negentropy",
        "nip-77",
        "set-reconciliation"
    ],
    "author": "_@f7z.io",
    "license": "MIT"
}
