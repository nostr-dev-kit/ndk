{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "outputs": ["dist/**", "lib/**"],
            "dependsOn": ["^build"],
            "inputs": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"]
        },
        "@nostr-dev-kit/ndk#build": {
            "outputs": ["dist/**"]
        },
        "@nostr-dev-kit/wallet#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["@nostr-dev-kit/ndk#build", "@nostr-dev-kit/sync#build"]
        },
        "@nostr-dev-kit/mobile#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["@nostr-dev-kit/ndk#build", "@nostr-dev-kit/wallet#build"]
        },
        "@nostr-dev-kit/blossom#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["@nostr-dev-kit/ndk#build"]
        },
        "@nostr-dev-kit/cache-browser#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["@nostr-dev-kit/ndk#build", "@nostr-dev-kit/cache-dexie#build", "@nostr-dev-kit/cache-sqlite-wasm#build"]
        },
        "@nostr-dev-kit/cache-dexie#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["@nostr-dev-kit/ndk#build"]
        },
        "@nostr-dev-kit/cache-memory#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["@nostr-dev-kit/ndk#build"]
        },
        "@nostr-dev-kit/cache-nostr#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["@nostr-dev-kit/ndk#build"]
        },
        "@nostr-dev-kit/cache-redis#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["@nostr-dev-kit/ndk#build"]
        },
        "@nostr-dev-kit/cache-sqlite#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["@nostr-dev-kit/ndk#build"]
        },
        "@nostr-dev-kit/cache-sqlite-wasm#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["@nostr-dev-kit/ndk#build"]
        },
        "@nostr-dev-kit/sync#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["@nostr-dev-kit/ndk#build"]
        },
        "@nostr-dev-kit/wot#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["@nostr-dev-kit/ndk#build", "@nostr-dev-kit/sync#build"]
        },
        "@nostr-dev-kit/sessions#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["@nostr-dev-kit/ndk#build", "@nostr-dev-kit/wallet#build"]
        },
        "test": {
            "outputs": ["coverage/**"],
            "dependsOn": ["build"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    },
    "globalDependencies": ["**/.env.*local"]
}
