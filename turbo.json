{
    "$schema": "https://turbo.build/schema.json",
    "tasks": {
        "build": {
            "outputs": ["dist/**", "lib/**"],
            "dependsOn": ["^build"],
            "inputs": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"]
        },
        "core#build": {
            "outputs": ["dist/**"]
        },
        "wallet#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["core#build", "sync#build"]
        },
        "hooks#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["core#build", "wallet#build"]
        },
        "mobile#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["core#build", "wallet#build", "hooks#build"]
        },
        "blossom#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["core#build"]
        },
        "cache-sqlite#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["core#build"]
        },
        "sync#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["core#build"]
        },
        "wot#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["core#build", "sync#build"]
        },
        "sessions#build": {
            "outputs": ["dist/**"],
            "dependsOn": ["core#build", "wallet#build"]
        },
        "test": {
            "outputs": ["coverage/**"],
            "dependsOn": ["build"]
        },
        "lint": {},
        "dev": {
            "cache": false,
            "persistent": true
        },
        "clean": {
            "cache": false
        }
    },
    "globalDependencies": ["**/.env.*local"]
}
