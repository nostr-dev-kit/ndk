{
  "name": "@nostr-dev-kit/wallet",
  "version": "1.0.0-beta.63",
  "description": "NDK Wallet",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "require": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "docs",
    "examples",
    "snippets"
  ],
  "scripts": {
    "dev": "bun run build --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "clean": "rm -rf dist",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "format": "biome format --write .",
    "docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nostr-dev-kit/ndk.git"
  },
  "keywords": [
    "nostr",
    "cashu",
    "ecash"
  ],
  "author": "pablof7z",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nostr-dev-kit/ndk/issues"
  },
  "homepage": "https://github.com/nostr-dev-kit/ndk",
  "peerDependencies": {
    "@cashu/cashu-ts": "^2.1",
    "@cashu/crypto": "*",
    "@nostr-dev-kit/ndk": "3.0.0-beta.63",
    "@nostr-dev-kit/sync": "1.0.0-beta.63"
  },
  "dependencies": {
    "debug": "^4.3.7",
    "light-bolt11-decoder": "^3.2.0",
    "tseep": "^1.3.1",
    "typescript": "^5.9.3",
    "webln": "^0.3.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@cashu/cashu-ts": "^2.1",
    "@cashu/crypto": "*",
    "@nostr-dev-kit/ndk": "3.0.0-beta.63",
    "@nostr-dev-kit/sync": "1.0.0-beta.63",
    "@types/debug": "^4.1.12",
    "@types/node": "^24.10.0",
    "@webbtc/webln-types": "^3.0.0",
    "nock": "^13.5.6",
    "tsup": "^8.4.0",
    "typedoc": "^0.28.14",
    "typedoc-plugin-markdown": "^4.9.0"
  }
}
