{
  "name": "@nostr-dev-kit/wot",
  "version": "0.3.7-beta.41",
  "description": "Web of Trust utilities for NDK",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "src",
    "README.md"
  ],
  "scripts": {
    "dev": "bun run build --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "clean": "rm -rf dist",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nostr-dev-kit/ndk.git"
  },
  "keywords": [
    "nostr",
    "web-of-trust",
    "wot",
    "trust"
  ],
  "author": "pablof7z",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nostr-dev-kit/ndk/issues"
  },
  "homepage": "https://github.com/nostr-dev-kit/ndk",
  "peerDependencies": {
    "@nostr-dev-kit/ndk": "3.0.0-beta.41",
    "@nostr-dev-kit/sync": "0.4.0-beta.41"
  },
  "dependencies": {
    "debug": "^4.3.7",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "tsup": "^8.4.0"
  }
}
